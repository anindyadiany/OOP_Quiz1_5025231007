//Anindya Diany 5025231007 Q11Fraction
public class Q11Fraction {
	//properties and fields as stated in the problem
    private int e1, d1, e2, d2; 
    private int es, ds;         
    private int ep, dp;   

    public Q11Fraction(int e1, int d1, int e2, int d2) {
        this.e1 = e1;
        this.d1 = d1;
        this.e2 = e2;
        this.d2 = d2;
    }

    public void computeFractions() {
    	//calculating es, ds, ep, and dp as stated in the problem
    	es =(e1*d2)+(e2*d1);
        ds =d1 * d2;
        ep =e1 * e2;
        dp =d1 * d2;
    }
    public void displayResults() {
    	System.out.println("Sum: " + es + "/" + ds);
        System.out.println("Product: " + ep + "/" + dp);
    }
    
    public class Main {
    public static void main(String[] args) {
    	//testing our test cases
        Q11Fraction fraction = new Q11Fraction(1, 2, 1, 3); 
        //computing the fractions first then displaying the results
        fraction.computeFractions();
        fraction.displayResults();
    }
    }
}
